<idea-plugin>
    <id>com.tobszarny.activetabhighlighter.plugin.id</id>
    <name>Active Tab Highlighter</name>
    <version>1.5.1</version>
    <vendor email="tomasz.obszarny.ga@gmail.com" url="https://github.com/tobszarny">tobszarny</vendor>

    <description><![CDATA[
     <p>Active Tab Highlighter Plugin for IntelliJ family IDEs</p>
     <p><a href="https://github.com/tobszarny/ActiveTabHighlighterPlugin">GitHub</a>
     |&nbsp;<a href="https://github.com/tobszarny/ActiveTabHighlighterPlugin/issues">Issues</a>
     </p>
    ]]></description>

    <change-notes><![CDATA[
<!-- autogenerated -->
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    -->
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Startup -->
        <postStartupActivity implementation="com.tobszarny.intellij.plugin.activetabhighlighter.ActiveTabHighlighterStartupActivity"/>

        <editorTabColorProvider
                implementation="com.tobszarny.intellij.plugin.activetabhighlighter.editor.CustomEditorTabColorProvider"/>

        <projectConfigurable groupId="tools" displayName="Active Tab Highlighter Plugin"
                             id="preference.HighlighterSettingsProjectConfigurable"
                             instance="com.tobszarny.intellij.plugin.activetabhighlighter.config.model.HighlighterSettingsConfigurable"/>
        <projectService
                serviceImplementation="com.tobszarny.intellij.plugin.activetabhighlighter.config.model.HighlighterSettingsProjectConfig"/>

        <!--        <applicationConfigurable parentId="tools" instance="com.tobszarny.intellij.plugin.activetabhighlighter.config.HighlighterSettingsGlobalConfigurable"-->
        <!--                                 id="preference.HighlighterSettingsGlobalConfigurable" displayName="Active Tab Highlighter Plugin"/>-->
        <applicationService
                serviceImplementation="com.tobszarny.intellij.plugin.activetabhighlighter.config.model.HighlighterSettingsGlobalConfig"/>
        <projectService serviceImplementation="com.tobszarny.intellij.plugin.activetabhighlighter.config.model.HighlighterSettingsConfig"/>
    </extensions>

    <actions>
    </actions>
</idea-plugin>
