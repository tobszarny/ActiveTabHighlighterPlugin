<idea-plugin>
    <id>com.tobszarny.activetabhighlighter.plugin.id</id>
    <name>Active Tab Highlighter</name>
    <version>2.0.0</version>
    <vendor email="tomasz.obszarny.ga@gmail.com" url="https://github.com/tobszarny">tobszarny</vendor>

    <description><![CDATA[
     <p>Active Tab Highlighter Plugin for IntelliJ family IDEs</p>
     <p><a href="https://github.com/tobszarny/ActiveTabHighlighterPlugin">GitHub</a>
     |&nbsp;<a href="https://github.com/tobszarny/ActiveTabHighlighterPlugin/issues">Issues</a>
     </p>
    ]]></description>

    <change-notes><![CDATA[
<!-- autogenerated -->
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    -->
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
         Startup
        <postStartupActivity implementation="com.tobszarny.intellij.plugin.activetabhighlighter.ActiveTabHighlighterStartupActivity"/>

        <vfs.asyncListener implementation="com.tobszarny.intellij.plugin.activetabhighlighter.Listener" />


        <editorTabColorProvider
                implementation="com.tobszarny.intellij.plugin.activetabhighlighter.editor.CustomEditorTabColorProvider"/>

        <projectConfigurable groupId="tools" displayName="Active Tab Highlighter"
                             id="preference.HighlighterSettingsProjectConfigurable"
                             instance="com.tobszarny.intellij.plugin.activetabhighlighter.config.model.SettingsConfigurable"/>
        <projectService
                serviceImplementation="com.tobszarny.intellij.plugin.activetabhighlighter.config.model.SettingsProjectConfig"/>

        <!--        <applicationConfigurable parentId="tools" instance="com.tobszarny.intellij.plugin.activetabhighlighter.config.HighlighterSettingsGlobalConfigurable"-->
        <!--                                 id="preference.HighlighterSettingsGlobalConfigurable" displayName="Active Tab Highlighter Plugin"/>-->
        <applicationService
                serviceImplementation="com.tobszarny.intellij.plugin.activetabhighlighter.config.model.SettingsGlobalConfig"/>
        <projectService serviceImplementation="com.tobszarny.intellij.plugin.activetabhighlighter.config.model.SettingsConfig"/>

    </extensions>

<!--    <applicationListeners>-->
<!--        <listener class="com.tobszarny.intellij.plugin.activetabhighlighter.ActiveTabHighlighterStartupActivity" topic="com.intellij.ide.AppLifecycleListener"/>-->
<!--    </applicationListeners>-->

    <actions>
    </actions>
</idea-plugin>
